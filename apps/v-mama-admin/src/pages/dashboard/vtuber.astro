---
const user = Astro.locals.user;

if (!user) {
  return Astro.redirect("/");
}

import DashboardLayout from "~/layouts/DashboardLayout.astro";
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from "~/components/ui/card";
import { CreateVtuberForm } from "~/components/dashboard/vtuber/create-vtuber";
---

<DashboardLayout>
  <div class="mt-8 grid gap-4 md:gap-6 2xl:grid-cols-2">
    <Card class="w-full">
      <CardHeader>
        <CardTitle class="text-2xl">Create Vtuber</CardTitle>
        <CardDescription class="text-sm">Create a new vtuber</CardDescription>
      </CardHeader>
      <CardContent>
        <CreateVtuberForm client:only="solid-js" />
      </CardContent>
    </Card>
  </div>
</DashboardLayout>
