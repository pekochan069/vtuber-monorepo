---
const user = Astro.locals.user;

if (!user) {
  return Astro.redirect("/");
}

import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@repo/ui/card";
import { CreateIllustratorForm } from "~/components/dashboard/illustrator/create-illustrator";
import DashboardLayout from "~/layouts/DashboardLayout.astro";
---

<DashboardLayout>
  <div class="mt-8 grid gap-4 md:gap-6 2xl:grid-cols-2">
    <Card class="w-full">
      <CardHeader>
        <CardTitle class="text-2xl">일러스트레이터 생성</CardTitle>
        <CardDescription class="text-sm">새로운 일러스트레이터 생성</CardDescription>
      </CardHeader>
      <CardContent>
        <CreateIllustratorForm client:only="solid-js" />
      </CardContent>
    </Card>
  </div>
</DashboardLayout>
