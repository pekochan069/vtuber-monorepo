{
	"name": "@repo/db",
	"private": "true",
	"module": "./src/index.ts",
	"type": "module",
	"scripts": {
		"db:generate": "drizzle-kit generate --schema=src/schema/index.ts --dialect=sqlite",
		"db:local": "wrangler d1 execute vtuber --local",
