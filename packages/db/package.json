		".": "./src/index.ts",
		"./schema": "./src/schema/index.ts"
	},
	"dependencies": {
		"drizzle-orm": "^0.31.0"
	},
	"devDependencies": {
		"dotenv-cli": "^7.4.2",
		"drizzle-kit": "^0.22.1"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
